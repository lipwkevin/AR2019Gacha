<%= link_to 'New Staff Card', new_working_card_path ,:class => 'btn btn-lg btn-primary'%>

<%= link_to 'New Coaster', new_coaster_path ,:class => 'btn btn-lg btn-primary'%>

<h2 data-toggle="collapse" href="#collapseCoaster" role="button"> Coaster </h2>
<div class="collapse show" id="collapseCoaster">
  <table class='table table-hover'>
    <thead class='thead-dark'>
      <tr>
        <th>id</th>
        <th>Name</th>
        <th>Status</th>
        <th>Sold Time</th>
      </tr>
    </thead>
    <tbody class=''>
      <% @coasters.try(:each) do |coaster| %>
        <tr>
          <td><%= coaster.id %></td>
          <td><%= coaster.name %></td>
          <td><%= coaster.sold %></td>
          <td><%= (coaster.soldTime!=nil ? coaster.soldTime.in_time_zone(-7) : ' ')%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

